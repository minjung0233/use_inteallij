<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartTeamDailyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorTheme1</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorTheme1</item>
        <item name="colorOnPrimary">@color/primaryTextColorTheme1</item>



        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorTheme1</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorTheme1</item>
        <item name="colorOnSecondary">@color/secondaryTextColorTheme1</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--<item name="android:colorBackground">@color/pink_20</item>-->
        <item name="colorAccent">?attr/colorSecondaryVariant</item>


    </style>

    <style name="Theme2" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowDisablePreview">true</item>

        <item name="colorPrimary">@color/primaryColorTheme2</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorTheme2</item>
        <item name="colorOnPrimary">@color/primaryTextColorTheme2</item>



        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorTheme2</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorTheme2</item>
        <item name="colorOnSecondary">@color/secondaryTextColorTheme2</item>


        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- <item name="android:colorBackground">@color/pink_20</item>-->
        <item name="colorAccent">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Theme3" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowDisablePreview">true</item>

        <item name="colorPrimary">@color/primaryColorTheme3</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorTheme3</item>
        <item name="colorOnPrimary">@color/primaryTextColorTheme3</item>



        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorTheme3</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorTheme3</item>
        <item name="colorOnSecondary">@color/secondaryTextColorTheme3</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--  <item name="android:colorBackground">@color/pink_20</item>-->
        <item name="colorAccent">?attr/colorSecondaryVariant</item>
    </style>



    <style name="Theme.SmartTeamDailyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomCalendarMonth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>


    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/white</item>

        <item name="colorControlNormal">?attr/colorSecondary</item>
        <item name="colorControlActivated">?attr/colorSecondary</item>
        <item name="colorControlHighlight">?attr/colorSecondary</item>
        <item name="android:textColorHighlight">?attr/colorSecondaryVariant</item>
    </style>

    <style name="FilledBoxColor" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">?attr/colorSecondary</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="Theme.smartteamdailyapplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.smartteamdailyapplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>